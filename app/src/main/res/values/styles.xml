<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!--带圆角的矩形的style-->
    <style name="rectangleTheme">
        <item name="android:background">@drawable/rectangle_round</item>
        <item name="android:layout_width">360dp</item>
    </style>

    <!--Android5.0之前系统无法指定状态栏颜色调用-->
    <style name="NoStatusBarTheme" parent="AppTheme">
    </style>

    <!--toolbar style-->
    <style name="toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!--底部导航栏-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/tab_menu_textcolor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme"/>

    <!--试衣间中图片的退出和放大按钮属性-->
    <style name="img_cancel">
        <item name="android:layout_marginBottom">-20dp</item>
        <item name="android:layout_marginRight">-20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>

        <item name="android:src">@drawable/ic_cancel</item>
    </style>

    <style name="img_enlarge">
        <item name="android:src">@drawable/ic_enlarge</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="tab_fitting_choose">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--显示的服装的属性-->
    <style name="clothesTheme">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/p5</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--我的页面中的属性-->
    <style name="llayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MineImageTheme">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="MineTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#9C9C9C</item>
        <item name="android:layout_marginStart">14sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingLinearLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ClothesTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/rectangle_round_fitting_lable</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SaveCollocationTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SaveCollocationLableStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rectangle_round_fitting_lable</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="NormalLableStyle">
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/rectangle_round_fitting_lable</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClassfyTextTheme">
        <item name="android:textSize">14sp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>
</resources>
