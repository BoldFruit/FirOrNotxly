<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/p4"
    android:layout_marginRight="@dimen/p4"
    >

    <View
        android:layout_marginTop="@dimen/p2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow_black"
        />

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:layout_marginTop="@dimen/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="3">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:layout_marginTop="@dimen/p2"
                android:layout_marginBottom="@dimen/p2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/img_comment_avatar"
                app:qmui_is_circle="true"
                android:src="@drawable/test_sky"
                />

        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/p2"
            android:layout_marginTop="@dimen/p2"
            android:layout_weight="1">

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_comment_avatar"
                    android:layout_weight="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="潮流帮主"
                    android:textSize="16sp"/>

                <TextView
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.xx.xx xx.xx"
                    android:id="@+id/txt_comment_time"
                    android:textColor="@color/shadow_black"
                    android:textSize="16sp"/>


            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <TextView
                android:id="@+id/txt_comment_words"
                android:layout_marginTop="@dimen/p4"
                android:layout_weight="14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这里一串巴拉巴拉的话，老铁666."
                android:textSize="16sp"/>

        </com.qmuiteam.qmui.layout.QMUILinearLayout>



    </com.qmuiteam.qmui.layout.QMUILinearLayout>



</com.qmuiteam.qmui.layout.QMUILinearLayout>