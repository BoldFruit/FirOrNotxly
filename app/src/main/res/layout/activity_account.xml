<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/llayout_login"
              android:background="@drawable/bg_login"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
              tools:context=".base.activity.ToolbarPresenterActivity"
              >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="252dp"
            android:layout_height="152dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_hanger"
            android:background="@color/transparent"
            />
        <!--android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/p4"
            android:layout_marginStart="@dimen/p5"-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_round"
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="42dp"
            android:gravity="center_vertical"
            >

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/hint_phonenumber"
                android:background="@color/transparent"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:maxLines="1"
                android:id="@+id/edit_phonenumber"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_captcha"
                android:maxLines="1"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/txt_getmessage"
                />
        </LinearLayout>

        <EditText
            android:layout_height="36dp"
            android:background="@drawable/rectangle_round"
            android:layout_width="match_parent"
            android:hint="@string/hint_captcha"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:maxLines="1"
            android:inputType="numberPassword"
            android:id="@+id/edit_captcha"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="30dp"
            android:layout_height="36dp"
            android:text="登录"
            android:background="@drawable/bg_rectangle_green"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_login"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="132dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/img_weixin"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_weixin"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_qq"
                android:id="@+id/img_qq"
                android:layout_marginStart="32dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
